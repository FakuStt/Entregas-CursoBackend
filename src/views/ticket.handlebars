<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticket Detail</title>
    <style>
        .ticket {
            border: 1px solid #ccc;
            padding: 20px;
            margin: 20px auto;
            width: 300px;
            background-color: #f9f9f9;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
        }
        .ticket h2 {
            color: #333;
        }
        .ticket p {
            margin: 10px 0;
            color: #555;
        }
        .ticket-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        button {
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            color: #fff;
        }
        #confirm-purchase {
            background-color: #4CAF50;
        }
        #cancel-purchase {
            background-color: #f44336;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- Incluye SweetAlert -->
</head>
<body>

    <div class="ticket">
        <h2>Ticket Code: {{code}}</h2>
        <p><strong>Date of Purchase:</strong> {{purchase_datetime}}</p>
        <p><strong>Amount:</strong> ${{amount}}</p>
        <p><strong>Purchaser:</strong> {{purchaser}}</p>

        <div class="ticket-buttons">
            <!-- Botón para confirmar la compra -->
            <button id="confirm-purchase">Finalizar Compra</button>
            
            <!-- Botón para cancelar la compra -->
            <button id="cancel-purchase">Ir a carritos</button>
        </div>
    </div>

    <script>
        // Manejo del botón de finalizar compra
        document.getElementById('confirm-purchase').addEventListener('click', function() {
            Swal.fire({
                title: '¿Estás seguro de finalizar la compra?',
                text: "No podrás revertir esto",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, finalizar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Compra finalizada',
                        'Tu compra ha sido realizada con éxito.',
                        'success'
                    );
                    // Aquí puedes agregar la lógica para completar la compra
                    // por ejemplo, hacer una petición al servidor para completar la transacción
                }
            });
        });

        // Manejo del botón de cancelar
        document.getElementById('cancel-purchase').addEventListener('click', function() {
            // Redirige al carrito personal (ajusta la ruta más tarde)
            window.location.href = '/api/carts';
        });
    </script>

</body>
</html>
